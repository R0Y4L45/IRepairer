@{
    Layout = null;
}

@model LoginViewModel

<div class="container">
    <div id="loginbox" style="margin-top:50px;"
         class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Sign In</div>
            </div>
            <div style="padding-top:30px;" class="panel-body">
                <div style="display:none;" id="login-alert"
                     class="alert alert-danger col-sm-12">
                </div>


                <form asp-area="" asp-controller="Account" asp-action="LogIn" method="post"
                      role="form" class="form-horizontal">
                    <div style="margin-bottom:25px" class="input-group">
                        <input asp-for="UserName" class="form-control" placeholder="Username" />
                        <span asp-validation-for="UserName"></span>
                    </div>

                    <div style="margin-bottom:25px" class="input-group">
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password"></span>
                    </div>

                    <div style="margin-top:10px" class="form-group">
                        <div class="col-sm-12 controls">
                            <input type="submit" class="btn-success" />
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="border-top:1px solid #888;padding-top:15px;font-size:85%">
                                Don't have an account!
                                <a asp-area="" asp-controller="Account" asp-action="RegisterUser">
                                    Sign Up as User Here
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="border-top:1px solid #888;padding-top:15px;font-size:85%">
                                Don't have an account!
                                <a asp-area="" asp-controller="Account" asp-action="RegisterRepairer">
                                    Sign Up as Repairer Here
                                </a>
                            </div>
                        </div>
                    </div>

                </form>


            </div>
        </div>
    </div>
</div>